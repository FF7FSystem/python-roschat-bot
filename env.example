# RosChat Bot Configuration
# Copy this file to .env and fill in your actual values

# Bot authentication token (minimum 64 characters)
# Get this from your RosChat server administrator
TOKEN=your_bot_token_here_minimum_64_characters_long

# RosChat server base URL (without trailing slash)
# Example: https://your-roschat-server.com
BASE_URL=https://your-roschat-server.com

# Bot display name (will be shown to users)
BOT_NAME=YourBotName

# Socket query parameter (usually 'type-bot')
QUERY=type-bot

# Whether to reject unauthorized connections
# Set to 'true' for production, 'false' for development
REJECT_UNAUTHORIZED=false

# Number of columns in custom keyboard layout
# Default: 3 (buttons will be arranged in 3 columns)
KEYBOARD_COLS=3 